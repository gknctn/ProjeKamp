@model EntitiyLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("BlogEdit", "AdminBlog", FormMethod.Post))
{
    @Html.Label("Blog ID")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })

    @Html.Label("Blog Basligi")
    @Html.TextBoxFor(x => x.BlogName, new { @class = "form-control" })

    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })

    @Html.Label("Blog Thumbnail")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })

    @Html.Label("Blog Resmi")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    @Html.Label("Yayinlansin mi")
    @Html.CheckBoxFor(x => x.BlogStatus, new { @class = "form-control", style = "width:20px" })

    @Html.Label("Blog Icerigi")
    @Html.TextAreaFor(x => x.BlogContent, 10, 3, new { @class = "form-control"})
    <br />
    <button class="btn btn-success">
        Guncelle
    </button>
}