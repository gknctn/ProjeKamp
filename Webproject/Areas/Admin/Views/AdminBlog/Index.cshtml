@using EntitiyLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Blog";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="ibox">
                <div class="ibox-content product-box" style="height:550px">
                    <div style="background-image:url('@item.BlogImage');background-size: 100% 100%" class="product-imitation">
                        [ INFO ]

                    </div>
                    <div class="product-desc">

                        <div style="height:150px">
                            <div class="row p-2">
                                <div class=" col-1 rounded-4" style="background-image:url('@item.Writer.ImageUrl');background-size: 100% 100%;height:30px!important;border-radius:16px;width:30px!important;flex:0px"></div>
                                <div class="col-10  m-auto">@item.Writer.UserName</div>
                            </div>
                            <small class="text-muted">@item.Category.CategoryName</small>

                            <a href="#" class="product-name"> @item.BlogName</a>
                            @if (item.BlogStatus==true)
                            {
                                <small class="text-muted">Aktif</small>
                            }else
                            {
                                <small class="text-muted">Pasif</small>
                            }
                        </div>

                        <div class="small m-t-xs text-dark" style="height:100px">

                            @if (item.BlogContent.Length < 400)
                            {
                                <p>@item.BlogContent</p>
                            }
                            else
                            {
                                <p>
                                    @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 400).LastIndexOf(" "))
                                    ...
                                </p>

                            }

                        </div>
                        <div class="m-t text-righ">

                            <a href="/Admin/AdminBlog/BlogEdit/@item.BlogID" class="btn btn-xs btn-outline btn-primary">
                                Duzenle
                                <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>



