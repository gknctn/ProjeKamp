@model IEnumerable<EntitiyLayer.Concrete.Comment>

<div class="mt-5">
    <h2>Yorumlar</h2>
    @if (Model.Count() == 0)
    {
        <div class="border-bottom border-top">
            <div class="media-body mt-4 mb-5">
                <h3>Yorum yok</h3>
                <p>İlk yorumu siz yapın..</p>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="page-header col-12">
                <h3><small class="pull-right">@Model.Count() Yorum</small>  </h3>
            </div>
            <div class="comments-list col-12">
                <form>
                    @foreach (var item in Model)
                    {
                        <div class="card mt-2" style="width: 100%;">
                            <div class="card-body">
                                <h5 class="card-title">Yorum sahibi : @item.CommentUserName</h5>
                                <p class="card-text border-top"><h5>Yorum:</h5>@item.CommentContent</p>
                                <input type="checkbox" class="CommentStatus"/>

                            </div>
                        </div>

                    }
                </form>
            </div>
        </div>
    }
</div>

