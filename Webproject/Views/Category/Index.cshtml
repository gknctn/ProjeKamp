@using EntitiyLayer.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/WriterLayot.cshtml";

}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            @if (item.CategoryStatus == true)
            {
                <td>Aktif</td>
            }
            else
            {
                <td>Aktif değil</td>
            }
            <td><a href="#" class="btn btn-warning">Detaylar</a></td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
        </tr>

    }
</table>
