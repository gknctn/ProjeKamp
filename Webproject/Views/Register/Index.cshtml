@model EntitiyLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Kayıt Ol</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-7 mb-3">
                            <label for="WriterName">Adınız</label>
                            @Html.TextBoxFor(x=>x.WriterName,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterName,"",new{@class="text-danger"})
                            @*<input type="text" class="" id="WriterName" name="Writername" placeholder="" required="">*@
                        </div>
                        <div class="col-md-7 mb-3">
                            <label for="WriterSurname">Soyadınız</label>
                            @Html.TextBoxFor(x=>x.WriterSurname,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterSurname,"",new{@class="text-danger"})
                            @*<input type="text" class="" id="WriterName" name="Writername" placeholder="" required="">*@
                        </div>
                        <div class="col-md-7 mb-3">
                            <label for="WriterMail">Mail Adresi</label>
                            @Html.TextBoxFor(x=>x.WriterMail,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterMail,"",new{@class="text-danger"})
                            @*<input type="email" class="form-control" id="WriterMail" name="WriterMail" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-7">
                            <label for="password" class="mb-2">Şifre</label>
                            @Html.TextBoxFor(x=>x.Writerpassword,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.Writerpassword,"",new{@class="text-danger"})
                            @*<input type="password" class="form-control" id="password" name="Writerpassword" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-7">
                            <label for="ImagePath" class="mb-2">Resim yolu</label>
                            @Html.TextBoxFor(x=>x.WriterImage,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterImage,"",new{@class="text-danger"})
                            @*<input type="text" class="form-control" id="ImagePath" name="WriterImage" placeholder="" required="">*@
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt ol</button>
                    <p>
                        <a href="#" id="condition">Tüm şartları okudum.Onaylıyorum</a>
                    </p>
                }

            </div>
        </div>
    </div>
    <br />
    <script>
        $('#condition').click(function () {
            Swal.fire({
                title: 'KVKK metni',
                text: 'Kaydettiğiniz mail adresi üzerindez size bilgilendirme e-postaları ileteceğimi kabul ediyorum. Kişisel verileriniz güvenliğiniz için saklı tutulacaktır.Güvencemiz altındadır.',
                icon: 'info',
                confirmButtonText: 'Tamam'
            })
        });

    </script>
</section>