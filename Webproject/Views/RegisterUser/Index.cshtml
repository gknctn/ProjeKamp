@model UserSignUpViewModel

@{
    ViewData["Title"] = "Kayit ol";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<div class="text-center mt-2 mb-5 border border-2 rounded">
    <div>
        <div>
            <h1 class="logo-name mt-5">IN+</h1>
        </div>
        <div class="mt-5">
            <h3>Blogumuza Hosgeldiniz</h3>
        </div>
        <p>
            Blogumuzda bulunan yuzlerce bloga erismek icin kayit olunuz.
            <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
        </p>

        <div class="border border-5 w-50 m-auto">
            <div class=" mt-5">

                <h4>Kayit ol</h4>
            </div>
            <form class="mt-5" role="form" asp-action="Index" method="post">
                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.Name"></span>
                    <input type="text" class="form-control w-50 m-auto" asp-for="@Model.Name" placeholder="Adiniz">
                </div>
                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.Surname"></span>
                    <input type="text" class="form-control w-50 m-auto" asp-for="@Model.Surname" placeholder="Soyadiniz">
                </div>

                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.UserName"></span>
                    <input type="text" class="form-control w-50 m-auto" asp-for="@Model.UserName" placeholder="Kullanici adiniz">
                </div>

                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.Mail"></span>
                    <input type="email" class="form-control w-50 m-auto" asp-for="@Model.Mail" placeholder="Mail">
                </div>

                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.Password"></span>
                    <input type="password" class="form-control w-50 m-auto" asp-for="@Model.Password" placeholder="Sifre">
                </div>

                <div class="form-group mt-2">
                    <span asp-validation-for="@Model.ConfirmPassword"></span>
                    <input type="password" class="form-control w-50 m-auto" asp-for="@Model.ConfirmPassword" placeholder="Sifre (Onayla)">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks">
                        <label> <input type="checkbox"><i></i> Kullanici sartlarini okudum onayliyorum. </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary block full-width mt-5 m-b">Login</button>

                <p class="text-muted text-center mt-5"><small>Hesabiniz var mi?</small></p>

                <a class="btn btn-sm btn-white btn-block mt-2" href="/LoginUser/Index/">Giris yap</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
        <p class="m-t"> <small>Asp.Net Core Proje; @DateTime.UtcNow</small> </p>
    </div>
</div>