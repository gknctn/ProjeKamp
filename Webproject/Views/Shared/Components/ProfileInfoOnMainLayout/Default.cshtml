@model EntitiyLayer.Concrete.AppUser

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container px-lg-5">
        <a class="navbar-brand" style="font-size:35px" asp-controller="Homepage" asp-action="index">BlogSite</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                @if (User.Identity.Name == null)
                {
                    <li class="nav-item"><a class="nav-link" style="color:white !important" asp-controller="RegisterUser" asp-action="index">Kayit ol</a></li>
                    <li class="nav-item me-5"><a class="nav-link" style="color:white !important" asp-controller="LoginUser" asp-action="index">Giris yap</a></li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link p-0 me-2" asp-controller="Dashboard" asp-action="index">
                            <img class="rounded-5" style="width:2rem" src="@Model.ImageUrl" alt="...">
                        </a>
                    </li>
                    <li class="nav-item text-white me-1">

                        <a class="nav-link" style="color:white !important" asp-controller="Dashboard" asp-action="index">
                            Hosgeldin @Model.Name @Model.Surname
                        </a>
                    </li>
                    <li class="nav-item text-white me-5 btn p-0 bg-danger">
                        <a class="nav-link" style="color:white !important" asp-controller="LoginUser" asp-action="LogOut">
                            <i class="bi bi-box-arrow-left"></i>
                        </a>
                    </li>

                }

                <li class="nav-item"><a class="nav-link text-white" asp-controller="Homepage" asp-action="index">Anasayfa</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Blog" asp-action="index">Bloglar</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="Contact" asp-action="index">Iletisim</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-controller="About" asp-action="index">Hakkimizda</a></li>
            </ul>
        </div>
    </div>
</nav>