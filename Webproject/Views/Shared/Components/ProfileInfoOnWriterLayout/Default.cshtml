@model EntitiyLayer.Concrete.AppUser

<li class="nav-item nav-profile dropdown">
    <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <div class="nav-profile-img">

            @if (Model.ImageUrl == null)
            {
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="image">
            }
            else
            {
                <img src="@Model.ImageUrl" alt="image">

            }
            <span class="availability-status online"></span>
        </div>
        <div class="nav-profile-text">
            <p class="mb-1 text-black">@Model.UserName</p>
        </div>
    </a>
    <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
        <a class="dropdown-item" asp-action="EditProfile" asp-controller="Writer">
            <i class="mdi mdi-cached mr-2 text-success"></i> Ayarlar
        </a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-action="LogOut" asp-controller="LoginUser">
            <i class="mdi mdi-logout mr-2 text-primary"></i> Cıkış yap
        </a>
    </div>
</li>