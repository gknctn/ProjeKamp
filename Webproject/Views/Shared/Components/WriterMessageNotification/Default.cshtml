@using EntitiyLayer.Concrete
@model List<Message2>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Gelen Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model)
    {
        <a class="dropdown-item preview-item" href="/Message/MessageDetail/@item.MessageID">
            <div class="preview-thumbnail">
                <img src="@item.MessageSenderUser.WriterImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.MessageSenderUser.WriterName @item.MessageSenderUser.WriterSurname kullanicisi size mesaj gonderdi.</h6>
                <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString()</p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <a href="/Message/InBox/"><h6 class="p-3 mb-0 text-center">Tum mesajlari gor</h6></a>
</div>